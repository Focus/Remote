<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="0px" android:layout_weight="1">
		<ImageView android:src="@drawable/playbutton" android:id="@+id/remote_play"
			android:layout_height="fill_parent" android:layout_width="0px"
			android:layout_weight="1" android:layout_margin="8pt" android:clickable="true"
			android:onClick="sendEvent" />
		<ImageView android:src="@drawable/stopbutton" android:id="@+id/remote_stop"
			android:layout_height="fill_parent" android:layout_width="0px"
			android:layout_weight="1" android:layout_margin="8pt" android:clickable="true"
			android:onClick="sendEvent" />
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="0px" android:layout_weight="1">
		<ImageView android:src="@drawable/playbutton" android:id="@+id/remote_seek_back"
			android:layout_height="fill_parent" android:layout_width="0px"
			android:layout_weight="1" android:layout_margin="8pt" android:clickable="true"
			android:onClick="sendEvent" />
		<ImageView android:src="@drawable/playbutton" android:id="@+id/remote_seek_forward"
			android:layout_height="fill_parent" android:layout_width="0px"
			android:layout_weight="1" android:layout_margin="8pt" android:clickable="true"
			android:onClick="sendEvent" />
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="0px" android:layout_weight="1">
		<ImageView android:src="@drawable/playbutton" android:id="@+id/remote_pause"
			android:layout_height="fill_parent" android:layout_width="0px"
			android:layout_weight="1" android:layout_margin="8pt" android:clickable="true"
			android:onClick="sendEvent" />
		<ImageView android:src="@drawable/playbutton" android:id="@+id/remote_fullscreen"
			android:layout_height="fill_parent" android:layout_width="0px"
			android:layout_weight="1" android:layout_margin="8pt" android:clickable="true"
			android:onClick="sendEvent" />
	</LinearLayout>
</LinearLayout>
