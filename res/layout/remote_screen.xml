<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="0px" android:layout_weight="1">
		<ImageView android:src="@drawable/play" android:id="@+id/remote_play"
			android:layout_height="fill_parent" android:layout_width="0px"
			android:layout_weight="1" android:padding="1pt" android:clickable="true"
			android:onClick="sendEvent" />
		<ImageView android:src="@drawable/pause" android:id="@+id/remote_pause"
			android:layout_height="fill_parent" android:layout_width="0px"
			android:layout_weight="1" android:padding="1pt" android:clickable="true"
			android:onClick="sendEvent" />
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="0px" android:layout_weight="1">
		<ImageView android:src="@drawable/seek_back" android:id="@+id/remote_seek_back"
			android:layout_height="fill_parent" android:layout_width="0px"
			android:layout_weight="1" android:padding="1pt" android:clickable="true"
			android:onClick="sendEvent" />
		<ImageView android:src="@drawable/seek_forward" android:id="@+id/remote_seek_forward"
			android:layout_height="fill_parent" android:layout_width="0px"
			android:layout_weight="1" android:padding="1pt" android:clickable="true"
			android:onClick="sendEvent" />
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="0px" android:layout_weight="1">
		<ImageView android:src="@drawable/stop" android:id="@+id/remote_stop"
			android:layout_height="fill_parent" android:layout_width="0px"
			android:layout_weight="1" android:padding="1pt" android:clickable="true"
			android:onClick="sendEvent" />
		<ImageView android:src="@drawable/pause" android:id="@+id/remote_fullscreen"
			android:layout_height="fill_parent" android:layout_width="0px"
			android:layout_weight="1" android:padding="1pt" android:clickable="true"
			android:onClick="sendEvent" />
	</LinearLayout>
</LinearLayout>
