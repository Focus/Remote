<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView android:id="@+id/new_remote_list" android:text="@string/new_remote_list"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="14pt" android:clickable="true" android:onClick="addNewRemote" />
	<TextView android:background="#3f3f3f" android:layout_width="fill_parent"
		android:layout_height="2pt" />
	<ListView android:id="@+id/remotelist" android:layout_width="fill_parent"
		android:layout_height="fill_parent" />
</LinearLayout>
